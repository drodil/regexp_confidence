{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "outDir": "dist",
    "inlineSourceMap": false,
    "inlineSources": false,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "types": [
  ]
}